<div class="weatherWidget">
	{{#each partials.weatherContext.locations}}
	<div class="location">
		<h3>Name: {{name}}</h3>
		<a href="{{forecastUrl}}">
			<img src="{{iconUrl}}" alt="{{weather}}">
			{{weather}}, {{temp}}
		</a>
	{{/each}}
	<small>Source: <a href="http://www.wunderground.com">
		Weather Underground
	</a></small>
	</div>
</div>
